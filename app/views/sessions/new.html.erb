<% provide(:title, "Login") %>

<div class="container">
    <div class="row">
    <div class="col-md-4 col-md-offset-4">
 <div class="panel panel-default">
 <div class="panel-body">

<h1>Login</h1>

<%= form_tag sessions_path do %>

  <p>
    <%= label_tag :email %><br />
    <%= text_field_tag :email, params[:email],:placeholder => "Your Email", :class => "form-control" %>
  </p>
  <p>
    <%= label_tag :password %><br />
    <%= password_field_tag :password, params[:password],:placeholder => "Your Password",:class => "form-control" %>
  </p>

  <%= submit_tag "Log in", :class => "btn btn-success" %>
<% end %>
<%#= link_to "Connect With Facebook", "/auth/facebook" %>
</br>
New to ideabata ? <%= link_to 'Sign up now !',sign_up_path %>
</div>
 </div> 
</div>
</div>
</div>
</div>