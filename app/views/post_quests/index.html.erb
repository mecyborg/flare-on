<% provide(:title, "Questions") %>
<br/>

<div class="container">
  <div class="row">
<% if admin? %>
        <%= link_to "Post new Question", new_post_quest_path, :class => "btn btn-success" %>
      <%end%>

  </div>
  <br/>
  <div class="row">

    <div class="col-lg-12">


      <% @post_quests.each do |ques| %>
        <% if ques %>
          <div class="col-lg-3 col-md-3">
            <div class="panel panel-success">
              <div class="panel-body">
            <%= link_to image_tag(ques.avatar.url(:thumb), class: "img-responsive img-rounded center-block" ), ques %>

                <h4><%=link_to truncate(ques.ques_text, :length => 100), ques %></h4>
                <br /><br />

                <%ans_count = Answer.where(question_id: ques.id).count.to_s%>
                <%= link_to "Answers <span class='badge'> #{ans_count} </span>".html_safe, ques, :class => "btn btn-info pull-left" %>
                <button type="button" class="btn btn-danger pull-right">Topic ID <span class="badge"><%= ques.t_id %></span></button>

              </div>
            </div>
          </div>
        <%end%>
      <%end%>

    </div>
    <%= will_paginate %>
  </div>
</div>

